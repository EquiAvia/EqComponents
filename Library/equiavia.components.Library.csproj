<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>Library</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageId>equiavia.components.Library</PackageId>
    <Version>0.0.1.0</Version>
    <Authors>Basil Buwalda</Authors>
    <Company>EQUIAVIA Ltd.</Company>
    <Product>EqComponents</Product>
    <Description>A set of native Blazor components. 
These components are still in pre-release.</Description>
    <Copyright>MIT</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/EquiAvia/EqComponents</PackageProjectUrl>
    <RepositoryUrl>https://github.com/EquiAvia/EqComponents</RepositoryUrl>
    <PackageTags>Treeview, Blazor, .net5</PackageTags>
    <NeutralLanguage>en-NZ</NeutralLanguage>
  </PropertyGroup>

  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\equiavia.components.Utilities\equiavia.components.Utilities.csproj" />
  </ItemGroup>

</Project>
